
@{
    ViewData["Title"] = "Movie Application";
}

@* Bring in the model from the MovieResponse file *@
@model Mission6_nsweiler.Models.MovieResponse

<h1>Fill out the movie application: </h1>

@* Form to fill out information about a movie  *@
@* Razor is the mash up of C#, HTML, CSS *@
<div>
    <form method="post">

        @* Ensures validation for required fields *@
        <div asp-validation-summary="All"></div> 

        <label asp-for="title">Title:</label>
        <input asp-for="title" /><br />

        <label asp-for="year">Year:</label>
        <input asp-for="year" /><br />

        <label asp-for="director">Director:</label>
        <input asp-for="director" /><br />

        <label asp-for="rating">Rating:</label>
        <select asp-for="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>

        </select><br />

        <label asp-for="lentTo">Lent To:</label>
        <input asp-for="lentTo" /><br />

        <label asp-for="notes">Notes:</label>
        <input asp-for="notes" /><br />

        <label asp-for="categoryId">Category:</label>
        <select asp-for="categoryId">
            <option value="">Choose a category:</option>
        @* Provides each category option in a dropdown menu *@
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.categoryId">@c.categoryName</option>
            }

        </select><br />

        <label asp-for="edited">Edited?</label>
        <select asp-for="edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        @* submission button that sends the form data to to the controller *@
        <button type="submit">Submit Application</button>

    </form>
</div>