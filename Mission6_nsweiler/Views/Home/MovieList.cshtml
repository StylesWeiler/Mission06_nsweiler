@{
    ViewData["Title"] = "Movie List";
}

@* ViewData is a dictionary of objecs that have a reference title and an entry   *@
@* ViewBag are dynamically set variables that can be seen between all of the views and the controller  *@

@model List<MovieResponse>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Lent To</td>
            <td>Notes</td>
            <td>Edited?</td>
        </tr>
        
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.category.categoryName</td>
            <td>@x.title</td>
            <td>@x.year</td>
            <td>@x.director</td>
            <td>@x.rating</td>
            <td>@x.lentTo</td>
            <td>@x.notes</td>
            <td>@x.edited</td>
            @* with asp-route you include on any piece of information you want to travel to the route insidee the "" *@
            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.movieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.movieId">Delete</a></td>
        </tr>
        }
    </tbody>

</table>