
@{
    ViewData["Title"] = "Delete Movie Application";
}

@model MovieResponse


<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete this record?</h3>


<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>


    <input type="hidden" asp-for="movieId" /> 
    @* Hidden input tag that allows the Delete action to access the movieId specified here and pass it to the DB *@
</form>